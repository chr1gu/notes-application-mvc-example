@model NotesApplication.Models.FormModels.NoteFormModel

<form asp-action="SubmitNote" asp-controller="Notes" method="post">
    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input type="text" class="form-control" placeholder="Title" asp-for="Title">
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Importance"></label>
        <select class="form-control" asp-for="Importance">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="FinishedAt"></label>
        <input type="datetime-local" class="form-control" asp-for="FinishedAt">
    </div>

    <div class="form-check">
        <label class="form-check-label" asp-for="IsFinished">
            <input type="checkbox" class="form-check-input" asp-for="IsFinished">
        </label>
    </div>

    @if (Model.Id.HasValue)
    {
        <button type="submit" class="btn btn-primary">Speichern</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Hinzufügen</button>
    }
</form>

<br>
